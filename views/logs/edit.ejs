<% include ../partials/header %>



<div class="ui main text container segment">
    <div class="ui huge header">Edit Log Entry</div>
    <form class="ui form" action="/animals/<%= log.animalID %>/logs/<%= log._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Animal</label>
            <input placeholder="" name="name" readonly value="<%= log.animalName %>" type="text">
        </div>
        <div class="field">
            <label>ID</label>
            <input placeholder="<%= log.animalID %>" name="id"readonly value="<%= log.animalID %>" type="text">
        </div>
        <div class="field">
            <label>Amount</label>
            <input type="number" name="amount" value="<%= log.amount %>">
        </div>
        <div class="field">
            <label>Date and Time Milked</label>
                <div class="field">
                    <input type="datetime-local" value="<%= log.dateMilked.toISOString().substring(0, 16) %>" name="dateMilked">
                </div>
        </div>
        <div class="field">
            <label>Notes</label>
            <textarea name="notes"><%= log.notes %></textarea>
        </div>
        <input class="ui violet basic button big" type="Submit">
    </form>
</div>

