<% include ../partials/header %>



<div class="ui main text container segment">
    <div class="ui huge header">New Log Entry</div>
    <form class="ui form" action="/animals/<%= animal._id %>/logs" method="POST">
        <div class="field">
            <label>Animal</label>
            <input name="name" readonly value="<%= animal.name %>" type="text">
        </div>
        <div class="field">
            <label>ID</label>
            <input name="id"readonly value="<%= animal._id %>" type="text">
        </div>
        <div class="field">
            <label>Amount</label>
            <input type="number" name="amount" placeholder="grams">
        </div>
        <div class="field">
            <label>Time and Date Milked</label>
                <div class="field">
                    <input type="datetime-local" name="dateMilked" required>
                </div>

        </div>
        <div class="field">
            <label>Notes</label>
            <textarea name="notes"></textarea>
        </div>
        <input class="ui violet basic button big" type="submit">
    </form>
</div>

<% include ../partials/footer %>